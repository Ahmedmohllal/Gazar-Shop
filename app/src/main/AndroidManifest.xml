<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.gazarshop">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".presentation.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GazarShop">
        <activity android:name=".presentation.ui.ItemDetailsActivity"
            android:parentActivityName=".presentation.ui.MainActivity"/>
        <activity
            android:name=".presentation.ui.CategoryDetailsActivity"
            android:parentActivityName=".presentation.ui.MainActivity" />
        <activity
            android:name=".presentation.ui.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.GazarShop.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".presentation.ui.RegistrationActivity" />
    </application>

</manifest>